<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/hikeFragmentAdd"
    xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".Fragment.AddHikeFragment"
    >

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/_24sdp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/hikeName"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeLocation"
            android:hint="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeDate"
            android:hint="Date"
            android:importantForAutofill="no"
            android:inputType="none"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <!--        <EditText-->
        <!--            android:id="@+id/hikeParking_available"-->
        <!--            android:hint="Parking available"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/edittext_background"-->
        <!--            android:layout_marginTop="@dimen/_10sdp"-->
        <!--            android:height="@dimen/_20sdp"-->
        <!--            android:width="@dimen/_45sdp"-->
        <!--            android:paddingEnd="@dimen/_15sdp"-->
        <!--            />-->
        <CheckBox
            android:id="@+id/hikeParking_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Available"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/hikeLength"
            android:hint="Length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeDifficulty"
            android:hint="Difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeDescription"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeEquipment"
            android:hint="Equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeQuality"
            android:hint="Quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <Button
            android:id="@+id/HikeAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Hike"></Button>
    </LinearLayout>

</FrameLayout>