<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="@dimen/_24sdp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
        <EditText
            android:id="@+id/hikeName"
            android:hint="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/hikeLocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@drawable/edittext_background"
                android:hint="Location"
                android:paddingEnd="@dimen/_15sdp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ProgressBar
                android:id="@+id/progressBar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginEnd="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.761"
                android:visibility="invisible"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <EditText
            android:id="@+id/hikeDate"
            android:hint="Date"
            android:importantForAutofill="no"
            android:inputType="none"
            android:focusable="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
<!--        <EditText-->
<!--            android:id="@+id/hikeParking_available"-->
<!--            android:hint="Parking available"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:background="@drawable/edittext_background"-->
<!--            android:layout_marginTop="@dimen/_10sdp"-->
<!--            android:height="@dimen/_20sdp"-->
<!--            android:width="@dimen/_45sdp"-->
<!--            android:paddingEnd="@dimen/_15sdp"-->
<!--            />-->
        <CheckBox
            android:id="@+id/hikeParking_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Parking Available"
            android:layout_marginTop="8dp"
            />
        <EditText
            android:id="@+id/hikeLength"
            android:hint="Length"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeDifficulty"
            android:hint="Difficulty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeDescription"
            android:hint="Description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeEquipment"
            android:hint="Equipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <EditText
            android:id="@+id/hikeQuality"
            android:hint="Quality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_background"
            android:layout_marginTop="@dimen/_10sdp"
            android:height="@dimen/_20sdp"
            android:width="@dimen/_45sdp"
            android:paddingEnd="@dimen/_15sdp"
            />
        <Button
            android:id="@+id/HikeAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Hike"></Button>
        <Button
            android:id="@+id/openMap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Map"
            android:visibility="invisible"
            />

    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu"/>
</androidx.constraintlayout.widget.ConstraintLayout>