<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_24sdp"
        tools:ignore="MissingConstraints">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="Add Hike"
            android:textStyle="bold"
            android:textSize="30sp">

        </TextView>
        <EditText
            android:id="@+id/hikeName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:width="@dimen/_45sdp"
            android:height="@dimen/_20sdp"
            android:background="@drawable/edittext_background"
            android:hint="Name"
            android:paddingEnd="@dimen/_15sdp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:orientation="vertical">
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/hikeLocation"
                        android:layout_width="0dp"
                        android:layout_height="55dp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@drawable/edittext_background"
                        android:hint="Location"
                        android:paddingEnd="@dimen/_15sdp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ProgressBar
                        android:id="@+id/progressBar"
                        style="?android:attr/progressBarStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginEnd="4dp"
                        android:visibility="invisible"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintVertical_bias="0.761" />


                </androidx.constraintlayout.widget.ConstraintLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/openMap"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_marginStart="3dp"
                    android:layout_marginTop="7dp"
                    android:text="Map"
                    android:background="@drawable/distance"
                    android:visibility="invisible" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/hikeDate"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:width="@dimen/_45sdp"
                android:height="@dimen/_20sdp"
                android:background="@drawable/edittext_background"
                android:focusable="false"
                android:hint="Date"
                android:importantForAutofill="no"
                android:inputType="none"
                android:paddingEnd="@dimen/_15sdp" />
            <CheckBox
                android:id="@+id/hikeParking_available"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Parking Available" />
        </LinearLayout>



        <!--        <EditText-->
        <!--            android:id="@+id/hikeParking_available"-->
        <!--            android:hint="Parking available"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:background="@drawable/edittext_background"-->
        <!--            android:layout_marginTop="@dimen/_10sdp"-->
        <!--            android:height="@dimen/_20sdp"-->
        <!--            android:width="@dimen/_45sdp"-->
        <!--            android:paddingEnd="@dimen/_15sdp"-->
        <!--            />-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/hikeLength"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:width="@dimen/_45sdp"
                android:height="@dimen/_20sdp"
                android:background="@drawable/edittext_background"
                android:hint="Length"
                android:paddingEnd="@dimen/_15sdp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:width="@dimen/_45sdp"
                android:height="@dimen/_20sdp"
                android:text="Km"></TextView>

<!--            <EditText-->
<!--                android:id="@+id/hikeDifficulty"-->
<!--                android:layout_width="170dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_marginTop="@dimen/_10sdp"-->
<!--                android:layout_marginLeft="4dp"-->
<!--                android:width="@dimen/_45sdp"-->
<!--                android:height="@dimen/_20sdp"-->
<!--                android:background="@drawable/edittext_background"-->
<!--                android:hint="Difficulty"-->
<!--                android:paddingEnd="@dimen/_15sdp" />-->
            <Spinner
                android:id="@+id/hikeDifficulty"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="4dp"
                android:width="@dimen/_45sdp"
                android:height="@dimen/_20sdp"
                android:background="@drawable/edittext_background" />

        </LinearLayout>





        <EditText
            android:id="@+id/hikeEquipment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:width="@dimen/_45sdp"
            android:height="@dimen/_20sdp"
            android:background="@drawable/edittext_background"
            android:hint="Equipment"
            android:paddingEnd="@dimen/_15sdp" />

        <EditText
            android:id="@+id/hikeQuality"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:width="@dimen/_45sdp"
            android:height="@dimen/_20sdp"
            android:background="@drawable/edittext_background"
            android:hint="Quality"
            android:paddingEnd="@dimen/_15sdp" />
        <EditText
            android:id="@+id/hikeDescription"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/_10sdp"
            android:width="@dimen/_45sdp"
            android:height="@dimen/_20sdp"
            android:background="@drawable/edittext_background"
            android:hint="Description"
            android:paddingEnd="@dimen/_15sdp" />

        <Button
            android:id="@+id/HikeAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"></Button>


    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />
</androidx.constraintlayout.widget.ConstraintLayout>