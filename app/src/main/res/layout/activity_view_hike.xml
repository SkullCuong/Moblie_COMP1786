<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true"
    android:animateLayoutChanges="true"
    tools:context=".controller.hike_controller.ViewHike">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_4sdp"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/hikeImage"
                        android:background="@drawable/input_background"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:scaleType="centerCrop" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/hikeName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:textStyle="bold"
                            android:textSize="@dimen/_16sdp"
                            android:layout_marginStart="8dp"/>
                        <TextView
                            android:id="@+id/hikeLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="A new Hiking for USA"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                        <TextView
                            android:id="@+id/hikeDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="26/10/2023"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                        <TextView
                            android:id="@+id/hikeLength"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Difficulty"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="@dimen/_120sdp"
                        android:layout_height="@dimen/_200sdp"
                        android:background="@drawable/input_background"
                        android:layout_marginBottom="@dimen/_4sdp"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="@dimen/_4sdp"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/input_background"
                            android:layout_weight="1"
                            />
                        <ImageView
                            android:layout_width="@dimen/_130sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:background="@drawable/input_background"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_4sdp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:orientation="horizontal">
                    <Button
                        android:id="@+id/deleteHike"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Delete"/>
                    <Button
                        android:id="@+id/HikeDetails"
                        android:layout_marginRight="@dimen/_24sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Details"/>
                    <Button
                        android:id="@+id/HikeUpdate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update"/>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>